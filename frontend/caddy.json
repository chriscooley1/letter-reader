{
  "logging": {
    "logs": {
      "default": {
        "level": "DEBUG",
        "writer": {
          "output": "stdout"
        }
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "example": {
          "listen": [":8080"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "file_server",
                  "root": "./dist"
                }
              ]
            },
            {
              "match": [
                {
                  "path": ["/*"]
                }
              ],
              "handle": [
                {
                  "handler": "rewrite",
                  "uri": "/index.html"
                }
              ]
            }
          ]
        }
      }
    }
  }
}
