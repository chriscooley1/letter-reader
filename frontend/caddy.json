{
  "apps": {
    "http": {
      "servers": {
        "example": {
          "listen": [":8080"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "rewrite",
                  "uri": "{http.matchers.file.relative}"
                },
                {
                  "handler": "file_server",
                  "root": "./dist",
                  "try_files": ["{http.request.uri.path}", "/index.html"]
                }
              ]
            }
          ]
        }
      }
    }
  }
}